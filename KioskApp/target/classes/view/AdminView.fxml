<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.vicenzo.kiosk.controller.AdminController">

    <top>
        <HBox spacing="12" styleClass="header" BorderPane.alignment="CENTER_LEFT">
            <Label text="Admin - Gerenciamento de pedidos" styleClass="title"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="btnVoltar" text="Voltar" onAction="#handleVoltar"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="12" styleClass="panel">
            <Label text="Pedidos" styleClass="section-title"/>
            <TableView fx:id="tblAtendimentos" prefHeight="300">
                <columns>
                    <TableColumn fx:id="colNumero" text="NÂº"/>
                    <TableColumn fx:id="colStatus" text="Status"/>
                    <TableColumn fx:id="colQtd" text="Itens"/>
                    <TableColumn fx:id="colTotal" text="Total"/>
                </columns>
            </TableView>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Novo status:"/>
                <ComboBox fx:id="cmbNovoStatus"/>
                <Button text="Atualizar status" onAction="#handleAtualizarStatus"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Recarregar" onAction="#handleRecarregar"/>
            </HBox>
        </VBox>
    </center>

    <stylesheets>
        view/styles.css
    </stylesheets>

    <padding>
        <Insets topRightBottomLeft="12"/>
    </padding>
</BorderPane>
